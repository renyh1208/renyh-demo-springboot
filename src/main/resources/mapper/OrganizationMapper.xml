<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.primeton.renyh.dao.OrganizationDao">

	 <select id="getById" resultType="com.primeton.renyh.model.Organization">
        select * from 
        renyh_organization
        where oid = #{oid}
    </select>
    
    <select id="getByDepartment" resultType="com.primeton.renyh.model.Organization">
        select * from 
        renyh_organization
        where department = #{department}
    </select>

    <delete id="deleteOrganization" parameterType="Integer">
        delete from 
        renyh_organization 
        where oid =#{oid}
    </delete>

 	<insert id="insertOrganization" parameterType="com.primeton.renyh.model.Organization">
        insert into renyh_organization
        (department,pid)
        value
        (#{department},#{pid})
    </insert>
	
	 <update id="updateOrganization" parameterType="com.primeton.renyh.model.Organization">
    	UPDATE renyh_organization SET
    	department = #{department},
    	pid = #{pid}
    	where oid =#{oid}
    </update>

	<select id="queryListOrganizations" resultType="com.primeton.renyh.model.Organization">
       select * from
       renyh_organization
       where pid =#{pid}
   	</select>

 	<select id="queryOrganizationGroup" resultType="com.primeton.renyh.model.User">
       	SELECT u.uid,u.passWord,u.userName,u.age,u.sex 
       	FROM renyh_organization AS o INNER JOIN
 		renyh_user as u ON  u.oid =o.oid
		AND u.oid=#{oid}
    </select>
</mapper>